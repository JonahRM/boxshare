<%= form_for(@specification) do |f| %>
  <% if @specification.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@specification.errors.count, "error") %> prohibited this specification from being saved:</h2>

      <ul>
      <% @specification.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Comments" %><br>
    <%= f.text_field :comment %>
  </div>
  <div class="field">
    <%= f.label "How many tickets will you use?" %><br>
    <%= f.number_field :will_use %>
  </div>
  <div class="field">
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%#= hidden_field_tag :user_id, current_user.id %>
  </div>
  <div class="field">
    <%= f.hidden_field :game_id,value: params[:game_id] %>
  </div>
  <div class="field">
    <%= f.hidden_field :group_id,value: params[:group_id] %>
  </div>
  <div class="actions">
    <%= f.submit "Update your plans" %>
  </div>
<% end %>
